{
  "name": "node-server-boilerplate",
  "version": "0.0.1",
  "description": "A flexible node server that bundles well with modern Javascript frameworks",
  "main": "src/index.js",
  "repository": "https://github.com/andmiguedev/node-server-boilerplate.git",
  "author": "Miguel Gomez <mgomez.developer@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "start": "cross-env NODE_ENV=production nodemon src/index.ts",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "lint:ignore": "eslint --ignore-path .gitignore",
    "lint:fix": "eslint --no-error-on-unmatched-pattern . --fix",
    "lint:check": "eslint ./src --ext .ts",
    "lint": "npm run lint:ignore && npm run lint:fix",
    "prettier": "prettier --write ./src \"**/*.+(ts|tsx)\" && prettier --check ./src \"**/*.+(ts|tsx)\"",
    "format": "npm run lint && npm run prettier",
    "build:dev": "tsc --watch --preserveWatchOutput"
  },
  "devDependencies": {
    "@types/node": "^14.14.31",
    "concurrently": "^6.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-loader": "^8.0.17",
    "typescript": "^4.2.2",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin": "^0.5.0"
  },
  "dependencies": {
    "@types/express": "^4.17.11",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "helmet": "^4.4.1",
    "winston": "^3.3.3"
  }
}
